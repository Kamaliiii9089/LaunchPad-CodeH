# Environment Variables Template

# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Server Configuration
PORT=5000
NODE_ENV=development



# Database Configuration
MONGODB_URI=your_mongodb_connection_string_here
# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gmail-subscription-manager?retryWrites=true&w=majority
# Example for Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/gmail-subscription-manager

# JWT Secret (Generate a long, random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex_at_least_32_characters

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your_google_client_id_from_console.developers.google.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_console
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Hugging Face API Configuration
HUGGING_FACE_API_KEY=your_hugging_face_api_token_here

# Have I Been Pwned (HIBP) API Configuration
# Get your API key from: https://haveibeenpwned.com/API/Key
# This is required for the breach check feature
HIBP_API_KEY=your_hibp_api_key_here

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging
# LOG_LEVEL=info
# DEBUG=false

# Email Analysis Model
HF_MODEL_NAME=facebook/bart-large-mnli
